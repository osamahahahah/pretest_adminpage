<body>


    <div class="container">
       
        <div class="content-header">
            <div class="title">
                <i class="fas fa-box"></i> Data Stock Produk
            </div>
        </div>

      
        <div class="content-card">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>NO</th>
                        <th>NAMA PRODUK</th>
                        <th>STOCK</th>
                        <th>STATUS</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(products && products.length > 0) { %>
                        <% products.forEach((product, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <i class="fas fa-box"></i> <%= product.nama_produk %>
                                </td>
                                <td>
                                    <div class="stock-info">
                                        <div class="progress">
                                            <div class="progress-bar" style="width: <%= (product.stok/100)*100 %>%"></div>
                                        </div>
                                        <span class="stock-number"><%= product.stok %></span>
                                    </div>
                                </td>
                                <td>
                                    <span class="status">
                                        <% if(product.stok > 0) { %>
                                            <i class="fas fa-check-circle"></i> Tersedia
                                        <% } else { %>
                                            <i class="fas fa-times-circle"></i> Habis
                                        <% } %>
                                    </span>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center">Tidak ada data produk</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
